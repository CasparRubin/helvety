{
  "name": "helvety",
  "version": "2.0.0",
  "private": true,
  "description": "Monorepo for all Helvety applications. Engineered & Designed in Switzerland.",
  "author": "Helvety by Rubin",
  "license": "UNLICENSED",
  "homepage": "https://helvety.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/CasparRubin/helvety.git"
  },
  "packageManager": "bun@1.3.5",
  "engines": {
    "node": ">=20.9.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2"
  }
}

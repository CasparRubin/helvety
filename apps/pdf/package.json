{
  "name": "@helvety/pdf",
  "version": "2.15.0",
  "description": "Privacy-focused, client-side PDF toolkit for merging, reordering, rotating, and extracting pages. Engineered & Designed in Switzerland.",
  "author": "Helvety by Rubin",
  "homepage": "https://helvety.com/pdf",
  "repository": {
    "type": "git",
    "url": "https://github.com/CasparRubin/helvety.git",
    "directory": "apps/pdf"
  },
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "dev": "node ../../scripts/generate-version.mjs && next dev -p 3004",
    "build": "node ../../scripts/generate-version.mjs && next build",
    "start": "next start -p 3004",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "analyze": "ANALYZE=true next build",
    "postinstall": "node -e \"require('fs').copyFileSync('node_modules/pdfjs-dist/build/pdf.worker.min.mjs', 'public/pdf.worker.min.mjs')\""
  },
  "dependencies": {
    "@helvety/brand": "workspace:*",
    "@helvety/shared": "workspace:*",
    "@helvety/ui": "workspace:*",
    "@fontsource-variable/public-sans": "^5.2.7",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.97.0",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.2",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.575.0",
    "next": "^16.1.6",
    "next-themes": "^0.4.6",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.624",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-pdf": "^10.3.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@helvety/config": "workspace:*",
    "@next/bundle-analyzer": "^16.1.6",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^25.3.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "shadcn": "^3.8.5",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "pdfjs-dist": "^5.4.624",
    "node-domexception": "^2.0.2"
  }
}
